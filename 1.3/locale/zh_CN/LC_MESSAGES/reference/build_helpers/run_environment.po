"      env_build = RunEnvironment(self)\n"
"      with tools.environment_append(env_build.vars):\n"
"         self.run(\"....\")\n"
"         # All the requirements bin folder will be available at PATH\n"
"         # All the lib folders will be available in LD_LIBRARY_PATH and "
