#: ../../../reference/conanfile/attributes.rst:894
#: ../../../reference/conanfile/attributes.rst:1003
msgid "NAME"
msgstr ""

#: ../../../reference/conanfile/attributes.rst:894
#: ../../../reference/conanfile/attributes.rst:1003
msgid "DESCRIPTION"
msgstr ""

#: ../../../reference/conanfile/attributes.rst:896
