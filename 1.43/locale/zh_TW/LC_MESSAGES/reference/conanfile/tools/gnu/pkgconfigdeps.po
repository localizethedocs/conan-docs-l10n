#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:184
msgid "Now, let's see how ``pkg_config_aliases`` property works step by step."
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:186
msgid ""
"Let's create our own ``myopenssl/1.0.0`` recipe and define several aliases "
"like the following:"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:201
msgid ""
"from conans import ConanFile\n"
"\n"
"class MyOpenSSLConan(ConanFile):\n"
"    name = \"myopenssl\"\n"
"    version = \"1.0.0\"\n"
"\n"
"    def package_info(self):\n"
"        # Aliases\n"
"        self.cpp_info.set_property(\"pkg_config_aliases\", "
"[\"myopenssl_alias\"])\n"
"        self.cpp_info.components[\"mycrypto\"]."
"set_property(\"pkg_config_aliases\", [\"mycrypto\", \"crp\"])\n"
"        self.cpp_info.components[\"myssl\"]."
"set_property(\"pkg_config_aliases\", [\"myssl\"])"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:202
msgid ""
"Then, after creating the package locally with :command:`conan create .` and "
"consuming it :command:`conan install myopenssl/1.0.0@ -g PkgConfigDeps`, the "
"files created will be:"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:204
msgid "myopenssl-mycrypto.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:205
msgid "myopenssl-myssl.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:206
#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:247
msgid "myopenssl.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:207
msgid "crp.pc *(alias of myopenssl-mycrypto)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:208
msgid "mycrypto.pc *(alias of myopenssl-mycrypto)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:209
msgid "myssl.pc *(alias of myopenssl-myssl)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:210
#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:251
msgid "myopenssl_alias.pc *(alias of myopenssl)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:212
msgid "Where any of those aliases files contains something like this:"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:214
#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:255
msgid "mycrypto.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:214
msgid ""
"Name: mycrypto\n"
"Description: Alias mycrypto for myopenssl-mycrypto\n"
"Version: 1.0.0\n"
"Requires: myopenssl-mycrypto"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:222
msgid "It's also possible to use both properties together:"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:242
msgid ""
"from conans import ConanFile\n"
"\n"
"class MyOpenSSLConan(ConanFile):\n"
"    name = \"myopenssl\"\n"
"    version = \"1.0.0\"\n"
"\n"
"    # any code here\n"
"\n"
"    def package_info(self):\n"
"        self.cpp_info.set_property(\"pkg_config_name\", \"myopenssl\")\n"
"        self.cpp_info.components[\"mycrypto\"]."
"set_property(\"pkg_config_name\", \"libmycrypto\")\n"
"        self.cpp_info.components[\"myssl\"]."
"set_property(\"pkg_config_name\", \"libmyssl\")\n"
"        # Aliases\n"
"        self.cpp_info.set_property(\"pkg_config_aliases\", "
"[\"myopenssl_alias\"])\n"
"        self.cpp_info.components[\"mycrypto\"]."
"set_property(\"pkg_config_aliases\", [\"mycrypto\", \"crp\"])\n"
"        self.cpp_info.components[\"myssl\"]."
"set_property(\"pkg_config_aliases\", [\"myssl\"])"
msgstr ""

