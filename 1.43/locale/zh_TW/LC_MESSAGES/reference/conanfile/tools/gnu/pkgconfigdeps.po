msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:155
#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:160
msgid "openssl.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:156
msgid "zlib.pc *(openssl requires zlib)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:158
msgid ""
"Their ``pkg_config_name`` properties are used as the final PC file names:"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:160
msgid ""
"Name: openssl\n"
