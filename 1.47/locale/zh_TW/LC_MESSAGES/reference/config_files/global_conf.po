"from conans import ConanFile\n"
"\n"
"class Pkg(ConanFile):\n"
"    name = \"android_ndk\"\n"
"\n"
"    def package_info(self):\n"
"        self.conf_info.define(\"tools.android:ndk_path\", os.path.join(self."
