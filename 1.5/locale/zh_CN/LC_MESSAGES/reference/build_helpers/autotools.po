msgid ""
"from conans import ConanFile, AutoToolsBuildEnvironment\n"
"import platform\n"
"\n"
"class ExampleConan(ConanFile):\n"
"   settings = \"os\", \"compiler\", \"build_type\", \"arch\"\n"
"\n"
"   def imports(self):\n"
"     self.copy(\"*.dll\", dst=\"bin\", src=\"bin\")\n"
