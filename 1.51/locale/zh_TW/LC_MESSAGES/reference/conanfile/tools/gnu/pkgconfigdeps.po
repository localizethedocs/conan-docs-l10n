#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:244
msgid "It's also possible to use both properties together:"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:264
msgid ""
"from conan import ConanFile\n"
"\n"
"class MyOpenSSLConan(ConanFile):\n"
"    name = \"myopenssl\"\n"
"    version = \"1.0.0\"\n"
"\n"
"    # any code here\n"
"\n"
"    def package_info(self):\n"
"        self.cpp_info.set_property(\"pkg_config_name\", \"myopenssl\")\n"
