"    def package_info(self):\n"
"        self.cpp_info.set_property(\"pkg_config_name\", \"openssl\")\n"
"        self.cpp_info.components[\"crypto\"]."
"set_property(\"pkg_config_name\", \"libcrypto\")\n"
"        self.cpp_info.components[\"ssl\"].set_property(\"pkg_config_name\", "
"\"libssl\")"
