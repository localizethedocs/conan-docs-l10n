msgid "myopenssl-mycrypto.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:227
msgid "myopenssl-myssl.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:228
#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:269
msgid "myopenssl.pc"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:229
msgid "crp.pc *(alias of myopenssl-mycrypto)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:230
msgid "mycrypto.pc *(alias of myopenssl-mycrypto)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:231
msgid "myssl.pc *(alias of myopenssl-myssl)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:232
#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:273
msgid "myopenssl_alias.pc *(alias of myopenssl)*"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:234
msgid "Where any of those aliases files contains something like this:"
msgstr ""

#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:236
#: ../../../reference/conanfile/tools/gnu/pkgconfigdeps.rst:277
msgid "mycrypto.pc"
