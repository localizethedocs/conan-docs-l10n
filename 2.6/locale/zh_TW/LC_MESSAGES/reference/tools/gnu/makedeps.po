"CONAN_ROOT_ZLIB = /home/conan/.conan2/p/b/zlib273508b343e8c/p\n"
"CONAN_INCLUDE_DIRS_ZLIB = $(CONAN_INCLUDE_DIR_FLAG)$(CONAN_ROOT_ZLIB)/"
"include\n"
"CONAN_LIB_DIRS_ZLIB = $(CONAN_LIB_DIR_FLAG)$(CONAN_ROOT_ZLIB)/lib\n"
