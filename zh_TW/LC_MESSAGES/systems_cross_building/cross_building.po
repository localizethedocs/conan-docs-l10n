"\n"
"[settings]\n"
"# We are cross-building to Windows\n"
"os=Windows\n"
"arch=x86_64\n"
"compiler=gcc\n"
"\n"
"# Adjust to the gcc version of your MinGW package\n"
"compiler.version=7.3\n"
"compiler.libcxx=libstdc++11\n"
"build_type=Release"
msgstr ""

